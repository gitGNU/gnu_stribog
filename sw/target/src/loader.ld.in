/*sections fill should be 0x4E4F2043414D454C0A, if any*/
OUTPUT_FORMAT("elf32-littlearm")
/*comment_on_the_cpu*/
MEMORY
{ ram(!r) : o = 0x40000000 + 32k - 1k, l = 1k
}
_arm_stack_bottom = 0x40000000 + 32k - 4;
SECTIONS
{.text :
 { *boot.o(.text)
   *(.text)
   *(.rodata)
   *(.bss)
   *(.data)
   *(.glue_7)
   *(.glue_7t)
 } >ram
}
